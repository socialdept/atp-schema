{
    "name": "socialdept/atp-schema",
    "description": "ATProto Lexicon parser and validator with DTO generation for Laravel",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-gmp": "*",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "suggest": {
        "socialdept/atp-resolver": "Required for DID resolution during DNS-based lexicon lookup"
    },
    "autoload": {
        "psr-4": {
            "SocialDept\\AtpSchema\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SocialDept\\AtpSchema\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SocialDept\\AtpSchema\\SchemaServiceProvider"
            ],
            "aliases": {
                "Schema": "SocialDept\\AtpSchema\\Facades\\Schema"
            }
        }
    }
}
